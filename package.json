{
  "name": "@yonycalsin/tailwindcss-theme",
  "version": "0.0.0",
  "description": ".",
  "keywords": [],
  "homepage": "https://github.com/yonycalsin/tailwindcss-theme#readme",
  "bugs": {
    "url": "https://github.com/yonycalsin/tailwindcss-theme/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yonycalsin/tailwindcss-theme.git"
  },
  "license": "MIT",
  "author": "Yony Calsin",
  "main": "dist/index.js",
  "module": "dist/tailwindcss-theme.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "check:format": "npm run prettier -- --list-different",
    "check:lint": "tsdx lint",
    "check:typecheck": "npm run typecheck",
    "format": "npm run prettier -- --write",
    "prepare": "tsdx build",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,scss,css,md}\"",
    "preview:build": "npm run build && npx tailwind-config-viewer export ./preview-build --config ./dist/index.js",
    "preview:deploy": "surge ./preview-build -d $PROJECT_NAME-$BRANCH_NAME.surge.sh --token $SURGE_TOKEN",
    "preview:down": "surge teardown $PROJECT_NAME-$BRANCH_NAME.surge.sh --token $SURGE_TOKEN",
    "semantic-release": "semantic-release",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "tsdx test",
    "typecheck": "tsc --pretty --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "husky": "^7.0.1",
    "prettier": "^2.4.1",
    "prettier-plugin-packagejson": "^2.2.15",
    "semantic-release": "^17.4.4",
    "size-limit": "^5.0.2",
    "surge": "^0.23.0",
    "tailwind-config-viewer": "^1.6.2",
    "tailwindcss": "^2.2.7",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/tailwindcss-theme.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tailwindcss-theme.esm.js",
      "limit": "10 KB"
    }
  ]
}
